<Window x:Class="ChessGui.PromoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="173" Width="206" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="63" Margin="25,36,0,0" VerticalAlignment="Top" Width="137">
            <RadioButton Content="Queen" Name="rb_queen" IsChecked="True"/>
            <RadioButton Content="Knight" Name="rb_knight" IsChecked="False"/>
            <RadioButton Content="Rook" Name="rb_rook" IsChecked="False"/>
            <RadioButton Content="Bishop" Name="rb_bishop" IsChecked="False"/>
        </StackPanel>
        <Label Content="Choose a piece for promotion:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" Width="171" Click="Button_Click"/>
    </Grid>
</Window>
